@* @model IEnumerable<LabIV.Models.Vehiculo> *@

@model Proyecto_Lab_IV.ModelView.VehiculoVM
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-dark">Create New</a>
</p>
<table class="table table-dark table-hover text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].patente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].anio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].tipoVehiculo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].fotografia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vehiculos[0].concesionaria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.vehiculos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.patente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.marca.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.anio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipoVehiculo.nombre)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.fotografia))
                    {
                        <img src="~/fotos/@item.fotografia" style="max-width:50px" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.concesionaria.nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="bi bi-ticket-detailed"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Paginador" for="@Model.paginador" />


